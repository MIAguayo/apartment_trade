<div>
  <div>
    <h1>
      List of all trade requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new trade request
    </h2>

    <form action="/insert_trade_request" method="post">
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <div>
        <label for="apartment_id_box">
          Apartment
        </label>

        <input type="text" id="apartment_id_box" name="query_apartment_id">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <button>
        Create trade request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Apartment
        </th>

        <th>
          Body
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trade_requests.each do |a_trade_request| %>
      <tr>
        <td>
          <%= a_trade_request.id %>
        </td>

        <td>
          <%= a_trade_request.sender_id %>
        </td>

        <td>
          <%= a_trade_request.recipient_id %>
        </td>

        <td>
          <%= a_trade_request.apartment_id %>
        </td>

        <td>
          <%= a_trade_request.body %>
        </td>

        <td>
          <%= time_ago_in_words(a_trade_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_trade_request.updated_at) %> ago
        </td>

        <td>
          <a href="/trade_requests/<%= a_trade_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
